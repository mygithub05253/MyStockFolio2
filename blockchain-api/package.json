{
  "name": "blockchain-api",
  "version": "1.0.0",
  "description": "MyStockFolio Blockchain API Service - ERC-20 Token & ERC-721 NFT",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "compile": "hardhat compile",
